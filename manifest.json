{
  "manifest_version": 2,
  "name": "Simply Synonyms",
  "author": "Benjamin Ashbaugh",
  "version": "0.99.1",
  "description": "A fast and lightweight thesaurus and dictionary extension for Chrome",
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "contextMenus"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'; media-src https://media.merriam-webster.com/",
  "web_accessible_resources": [
    "embeddedScript.bundle.js",
    "fonts/*",
    "assets/*"
  ],
  "externally_connectable" : {
    "matches": [ "*://localhost/*", "https://simplysynonyms.com/*" ]
  },
  "content_scripts": [{
    "js": ["content.bundle.js"],
    "css": ["content.bundle.css"],
    "matches": ["*://*/*"],
    "run_at": "document_idle"
  }],
  "key": ""
}
