    "react-hot-toast": "^2.1.1",
    "react-spring": "^9.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@types/chrome": "^0.0.159",
    "archiver": "^5.1.0",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.3.2",
    "css-loader": "^5.0.1",
    "css-minimizer-webpack-plugin": "^1.1.5",
    "file-loader": "^6.2.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^5.3.2",
    "mini-css-extract-plugin": "^1.3.1",
    "prettier": "^2.4.1",
