{
  // Required
  "manifest_version": 2,
  "name": "Simply Synonyms",
  "version": "0.1.0",
  "description": "A simple synonym finder for Google Chrome",
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_popup": "popup/popup.html"
  },

  "author": "Benjamin Ashbaugh",
  "content_scripts": [{
    "css": ["/page/styles.css"],
    "js": ["/page/content.js"],
    "matches": ["*://*/*"]
  }]
}
